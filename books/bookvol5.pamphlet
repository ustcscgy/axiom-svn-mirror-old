          (do ((tmp1 (caar |$InteractiveFrame|) (cdr tmp1)) (x nil))
              ((or (atom tmp1) 
                   (progn (setq x (car tmp1)) nil))
                (nreverse0 tmp0))
           (seq
            (exit
             (setq tmp0
              (cons 
               (cons 
                (car x)
                (prog (tmp2)
                 (spadlet tmp2 nil)
                 (return
                  (do ((tmp3 (cdr x) (cdr tmp3)) (|y| nil))
                      ((or (atom tmp3) 
                           (progn (setq |y| (car tmp3)) nil))
                        (nreverse0 tmp2))
