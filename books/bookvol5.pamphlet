<<defun concat>>=
(defun concat (a b &rest l)
 (if (bit-vector-p a)
   (if l 
     (apply #'concatenate 'bit-vector a b l)
     (concatenate 'bit-vector a b))
   (if l 
     (apply #'system:string-concatenate a b l)
     (system:string-concatenate a b))))

