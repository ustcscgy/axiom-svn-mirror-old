\defun{runspad}{runspad}
<<defun runspad>>=
(defun |runspad| () 
 (prog (mode) 
 (declare (special |$quitTag|))
  (return 
   (seq 
    (progn 
     (setq mode '|restart|) 
     (do () 
         ((null (eq mode '|restart|)) nil)
      (seq 
       (exit 
        (progn 
         (|resetStackLimits|) 
         (catch |$quitTag| 
          (catch '|coerceFailure| 
           (setq mode (catch '|top_level| (|ncTopLevel|))))))))))))))

