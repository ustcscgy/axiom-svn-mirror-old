     (protected-symbol-warn v) 
     (if v "on" "off"))
    ((or (null arg) (eq arg '|%describe%|) (eq (car arg) '?))
     (|describeProtectedSymbolsWarning|))
    (t (protected-symbol-warn (|translateYesNo2TrueFalse| (car arg)))))))

