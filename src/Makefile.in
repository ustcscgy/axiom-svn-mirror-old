
pamphlets = Makefile.pamphlet

subdir = src/

SUBDIRS = @axiom_src_subdirs@

.PHONY: all all-ax all-src all-clef all-sman 

all: all-ax

all-ax all-src: stamp
	@echo finished $(builddir)

stamp: @axiom_src_all@
	-rm -f stamp
	$(STAMP) stamp

all-clef: all-lib
	@$(mkinstalldirs) $(axiom_target_bindir)
	cd clef && ${ENV} ${MAKE} $(AX_FLAGS)
all-sman: all-lib
	$(mkinstalldirs) $(axiom_target_bindir)
	$(mkinstalldirs) $(axiom_target_libdir)
	cd sman && ${ENV} ${MAKE} $(AX_FLAGS)
all-hyper: all-lib
	$(mkinstalldirs) $(axiom_target_bindir)
	$(mkinstalldirs) $(axiom_target_datadir)
	cd hyper && ${ENV} ${MAKE} $(AX_FLAGS)
all-share:
	$(mkinstalldirs) $(axiom_target_libdir)
	cd share && ${ENV} ${MAKE} $(AX_FLAGS)
all-doc:
	@ $(mkinstalldirs) ./$(top_builddir)/int/doc
	cd doc && ${ENV} ${MAKE} $(AX_FLAGS)
all-book:
	cd booklets && ${ENV} ${MAKE} $(AX_FLAGS)
all-lib:
	$(mkinstalldirs) $(OUT)
	@cd lib && ${ENV} ${MAKE} $(AX_FLAGS)
all-lisp: all-lib
	$(mkinstalldirs) $(axiom_build_bindir)
	cd lisp && $(ENV) $(MAKE) $(AX_FLAGS) all-lisp
all-boot: all-lisp
	$(mkinstalldirs) $(axiom_build_bindir)
	@cd boot && ${ENV} ${MAKE} $(AX_FLAGS)
all-interpsys: all-boot
	@$(mkinstalldirs) ./$(top_builddir)/int/algebra
	cd interp && ${ENV} ${MAKE} $(AX_FLAGS) all-interpsys

all-axiomsys: all-asq
	cd interp && $(ENV) $(MAKE) $(AX_FLAGS) all-axiomsys
all-algebra: all-interpsys all-share
	@ $(mkinstalldirs) algebra/strap
	@ $(mkinstalldirs) ./$(top_builddir)/int/input
	cd algebra && ${ENV} ${MAKE} $(AX_FLAGS)
all-input: all-axiomsys all-clef
	@ $(mkinstalldirs) ./$(top_builddir)/int/input
	cd input && ${ENV} ${MAKE} $(AX_FLAGS)
all-asq: all-algebra
	cd etc && ${ENV} ${MAKE} $(AX_FLAGS)
all-graph: all-lib
	@ $(mkinstalldirs) ./$(top_builddir)/int/graph/parabola
	cd graph && ${ENV} ${MAKE} $(AX_FLAGS)

mostlyclean-local:
	-rm -f stamp

clean-local: mostlyclean-local

distclean-local: clean-local

