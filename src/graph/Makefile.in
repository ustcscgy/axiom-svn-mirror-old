	@ mkdir -p ${OBJ}/${SYS}/lib
	@ mkdir -p ${MNT}/${SYS}/lib
	@ mkdir -p ${MNT}/${SYS}/doc/src/graph
	@(cd viewman ; ${ENV} ${MAKE} )

viewmandocument: $(builddir)/viewman/Makefile
