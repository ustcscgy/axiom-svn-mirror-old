# local include files shared by graphics
LINC=	$(axiom_src_srcdir)/graph/include

# global include files shared by everyone
GINC=	$(axiom_src_srcdir)/include

build_libdir = $(abs_top_builddir)/src/lib

viewAlone_sources = viewAlone.c spoonComp.c spoon2D.c

viewAlone_SOURCES = $(addsuffix .pamphlet, $(viewAlone_sources))

viewAlone_objects = $(addprefix $(builddir)/, $(viewAlone_sources:.c=.o))

viewAlone_LDADD = -L$(build_libdir) -lspad
viewAlone_DEPENDENCIES = $(build_libdir)/libspad.a

pamphlets = Makefile.pamphlet $(viewAlone_SOURCES)


subdir = src/graph/viewAlone/

CFLAGS = ${CCF} ${AXIOM_X11_CFLAGS} -I$(srcdir) -I${LINC} -I${GINC} 
LDFLAGS= ${AXIOM_X11_LDFLAGS}

HEADERS= $(srcdir)/viewAlone.h     ${LINC}/component.h ${LINC}/view2D.h  \
         ${LINC}/view3D.h      ${LINC}/tube.h      ${LINC}/actions.h \
         ${LINC}/viewCommand.h 

all: $(axiom_target_bindir)/viewAlone
	-rm -f stamp
	$(STAMP) stamp
	@echo 12 finished $(srcdir)

$(axiom_target_bindir)/viewAlone: $(viewAlone_objects) \
		 $(viewAlone_DEPENDENCIES)
	${CC} $(viewAlone_objects) -o $@ $(viewAlone_LDADD) ${LDFLAGS}

.PRECIOUS: $(builddir)/%.o
.PRECIOUS: $(builddir)/%.c

$(builddir)/%.o: $(HEADERS)

$(builddir)/%.o: $(builddir)/%.c
	$(CC) $(CFLAGS) -c -o $@ $<

$(builddir)/%.c: $(srcdir)/%.c.pamphlet
	$(axiom_build_document) --tangle --output=$@ $<

$(build_libdir)/libspad.a:
	cd $(build_libdir) && $(MAKE) $@

mostlyclean-local:

clean-local: mostlyclean-local
	-rm -f $(viewAlone_sources) $(viewAlone_objects)
	-rm $(axiom_target_bindir)/viewAlone

distclean-local: clean-local

