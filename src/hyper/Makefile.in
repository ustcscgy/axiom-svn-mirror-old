# this is where we are compiling from
IN=     $(axiom_src_srcdir)/hyper

# this is the intermediate place 
MID=    ${INT}/hyper

# this is the intermediate place 
MIDOBJ=    ${OBJ}/${SYS}/hyper

# this is where to put the various commands
OUT=	${MNT}/${SYS}/bin
OUTLIB=	${MNT}/${SYS}/lib

# this is where the include files live
INC=    $(axiom_src_srcdir)/include

# this is where we hid the libspad library
LIB=	${OBJ}/${SYS}/lib

# this is where the hypertex documentation files are
HYPER=${MNT}/${SYS}/share/hypertex

CFLAGS=	${CCF} -I$(INC) -I$(builddir) ${AXIOM_X11_CFLAGS}
LDFLAGS= ${AXIOM_X11_LDFLAGS} -lm

HTADD=${OUT}/htadd

BITMAPS=$(builddir)/mouse11.bitmap $(builddir)/mouse11.mask \
	$(builddir)/sdown3d.bitmap $(builddir)/sdown3dpr.bitmap \
	$(builddir)/sdown.bitmap $(builddir)/sup3d.bitmap \
        $(builddir)/sup3dpr.bitmap $(builddir)/sup.bitmap \
	$(builddir)/ht_icon

SCRIPTS=${OUTLIB}/htsearch ${OUTLIB}/presea

BINFILES= ${OUT}/hypertex ${OUT}/htadd ${OUT}/htsearch ${OUTLIB}/spadbuf \
          ${OUTLIB}/hthits ${OUTLIB}/ex2ht


HEADERS = addfile.h cond.h dialog.h display.h event.h extent.h \
	group.h hterror.h hyper.h initx.h keyin.h lex.h mem.h \
	parse.h parse_aux.h parse_paste.h parse_types.h scrollbar.h \
	show_types.h titlebar.h token.h


build_libdir = $(abs_top_builddir)/src/lib


hypertex_sources = addfile.c cond.c dialog.c display.c event.c extent1.c \
		extent2.c form_ext.c group.c halloc.c hash.c hterror.c \
		htinp.c hyper.c initx.c input.c item.c keyin.c lex.c \
		macro.c mem.c parse.c parse_aux.c parse_input.c \
		parse_paste.c parse_types.c ReadBitmap.c scrollbar.o \
		show_types.c spadint.c titlebar.c

hypertex_SOURCES = $(hypertex_sources:.c=.pamphlet)
hypertex_objects = $(hypertex_sources:.c=.o)
hypertex_LDADD = -L$(build_libdir) -lspad
hypertex_DEPENDENCIES = $(build_libdir)/libspad.a

htadd_sources = addfile.c halloc.c hash.c htadd.c hterror.c lex.c
htadd_SOURCES = $(htadd_sources:.c=.pamphlet)
htadd_objects = $(htadd_sources:.c=.o)
htadd_LDADD = -L$(build_libdir) -lspad
htadd_DEPENDENCIES = $(build_libdir)/libspad.a

htsearch_SOURCES = search.pamphlet

spadbuf_sources = spadbuf.c
spadbuf_SOURCES = $(spadbuf_sources:.c=.pamphlet)
spadbuf_objects = $(spadbuf_sources:.c=.o)
spadbuf_LDADD = -L$(build_libdir) -lspad
spadbuf_DEPENDENCIES = $(build_libdir)/libspad.a

hthits_sources = hthits.c
hthits_SOURCES = $(hthits_sources:.c=.pamphlet)
hthits_objects = $(hthits_sources:.c=.o)
hthits_LDADD = -L$(build_libdir) -lspad
hthits_DEPENDENCIES = $(build_libdir)/libspad.a

ex2ht_sources = ex2ht.c
ex2ht_SOURCES = $(ex2ht_sources:.c=.pamphlet)
ex2ht_objects = $(ex2ht_sources:.c=.o)
ex2ht_LDADD = -L$(build_libdir) -lspad
ex2ht_DEPENDENCIES = $(build_libdir)/libspad.a

pamphlets = Makefile.pamphlet $(hypertex_SOURCES) $(htadd_SOURCES) \
		$(htsearch_SOURCES) $(spadbuf_SOURCES) $(hthits_SOURCES) \
		$(ex2ht_SOURCES)


subdir = src/hyper/

all: $(HEADERS) ${BITMAPS} ${SCRIPTS} ${BINFILES} ${HYPER}/pages/ht.db  
	@ echo 141 finished ${IN}

mostclean-local:

clean-local: mostclean-local
	-rm -f $(objects)
	-rm -f $(hypertex_SOURCES)
	-rm -f $(htadd_SOURCES)
	-rm -f $(htsearch_SOURCES)
	-rm -f $(spadbuf_SOURCES)
	-rm -f $(hthits_SOURCES)
	-rm -f $(ex2ht_SOURCES)
	-rm -f ${OUTLIB}/htsearch ${OUTLIB}/presea
	-rm -f ${OUTLIB}/ex2ht ${OUT}/htadd
	-rm -f ${OUTLIB}/hthits ${OUT}/hypertex 
	-rm -f ${OUT}/htsearch ${OUTLIB}/spadbuf

clean:
	@echo 142 cleaning $(axiom_src_srcdir)/hyper

.PRECIOUS: $(builddir)/%.h

$(HEADERS): $(builddir)/%.h: $(srcdir)/%.pamphlet
	$(axiom_build_document) --tangle=$*.h --output=$@ $<

.PRECIOUS: $(builddir)/%.o
.PRECIOUS: $(builddir)/%.c

$(builddir)/%.o: $(HEADERS)

$(objects): $(builddir)/%.o: $(builddir)/%.c
	$(CC) $(CFLAGS) -c -o $@ $<

$(builddir)/%.c: $(srcdir)/%.pamphlet
	$(axiom_build_document) --tangle --output=$@ $<


$(builddir)/mouse11.bitmap: $(srcdir)/bitmaps.pamphlet
	$(axiom_build_document) --tangle=mouse11.bitmap --output=$@ $< 

$(builddir)/mouse11.mask: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=mouse11.mask --output=$@ $< 

$(builddir)/sdown3d.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sdown3d.bitmap --output=$@ $< 

$(builddir)/sdown3dpr.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sdown3dpr.bitmap --output=$@ $< 

$(builddir)/sdown.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sdown.bitmap --output=$@ $< 

$(builddir)/sup3d.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sup3d.bitmap --output=$@ $< 

$(builddir)/sup3dpr.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sup3dpr.bitmap --output=$@ $< 

$(builddir)/sup.bitmap: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=sup.bitmap --output=$@ $< 

$(builddir)/ht_icon: ${IN}/bitmaps.pamphlet
	$(axiom_build_document) --tangle=hticon --output=$@ $< 

${HYPER}/pages/ht.db: $(srcdir)/pages/*.ht $(srcdir)/pages/*.pht
	@echo making ${HYPER}/pages from $(axiom_src_srcdir)/pages directory
	@ mkdir -p ${HYPER}/pages
	@ cp -pr $(srcdir)/pages/*.ht ${HYPER}/pages
	@ cp -pr $(srcdir)/pages/*.pht ${HYPER}/pages
	@ (cd ${HYPER}/pages ; \
           rm -f ht.db ; \
           rm -f *~ ; \
	   ${HTADD} *.ht *.pht )
	@ cp -pr $(srcdir)/bitmaps ${HYPER}
	@ cp -pr $(srcdir)/viewports $(axiom_target_datadir)


${MID}/ReadBitmap.c: $(srcdir)/ReadBitmap.pamphlet
	$(axiom_build_document) --tangle --output=$@ $<

${MIDOBJ}/ReadBitmap.o: ${MID}/ReadBitmap.c
	@ echo 117 making ${MIDOBJ}/ReadBitmap.o from ${MID}/ReadBitmap.c
	@ ( cd ${MIDOBJ} ; \
	    ${CC} -I${INC} -I${MID} -c ${CFLAGS} ${MID}/ReadBitmap.c )

${OUTLIB}/htsearch: $(srcdir)/search.pamphlet
	$(axiom_build_document) --tangle=htsearch --output=$@ $<
	chmod a+x ${OUTLIB}/htsearch

${OUTLIB}/presea: $(srcdir)/search.pamphlet
	$(axiom_build_document) --tangle=presea --output=$@ $<
	chmod a+x ${OUTLIB}/presea

${OUTLIB}/ex2ht: $(ex2ht_objects) $(ex2ht_DEPENDENCIES)
	${CC} $(ex2ht_objects) -o $@ $(ex2ht_LDADD) $(LDFLAGS)

${OUT}/htadd: $(htadd_objects) $(htadd_DEPENDENCIES)
	${CC} $(htadd_objects) -o $@ $(htadd_LDADD) $(LDFLAGS)

${OUTLIB}/hthits: $(hthits_objects) $(hthits_DEPENDENCIES)
	${CC} $(hthits_objects) -o $@ $(hthits_LDADD) $(LDFLAGS)


${OUT}/htsearch: ${OUTLIB}/htsearch ${OUTLIB}/presea
	@ echo making ${OUT}/htsearch
	@ cp -p ${OUTLIB}/htsearch ${OUT}/htsearch
	@ cp -p ${OUTLIB}/presea ${OUT}/presea


${OUT}/hypertex: $(hypertex_objects) $(hypertex_DEPENDENCIES)
	 ${CC} -g $(hypertex_objects) -o $@ $(hypertex_LDADD) $(LDFLAGS)

${OUTLIB}/spadbuf: $(spadbuf_objects) $(spadbuf_DEPENDENCIES)
	${CC} $(spadbuf_objects) -o $@ $(spadbuf_LDADD) $(LDFLAGS)
